{
  "name": "reago",
  "author": "Sebastian Daniel Nowak",
  "license": "MIT",
  "version": "0.1.2",
  "description": "Zero-dependency declarative state manager",
  "keywords": [
    "reago",
    "state",
    "state manager",
    "observable",
    "reactive",
    "react",
    "recoil",
    "jotai"
  ],
  "homepage": "https://reago.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-nowak/reago.git",
    "directory": "package/reago"
  },
  "bugs": {
    "url": "https://github.com/sebastian-nowak/reago/issues"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "readme.md",
    "changelog.md",
    "./dist/**/*",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "import": {
        "raw": "./src/index.ts",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "raw": "./src/index.ts",
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest"
  }
}
